{
    "rewrites": [
        {
            "source": "/api/shorten",
            "destination": "/api/shorten"
        },
        {
            "source": "/api/stats",
            "destination": "/api/stats"
        },
        {
            "source": "/:slug",
            "destination": "/api/[slug]"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type"
                }
            ]
        }
    ]
}